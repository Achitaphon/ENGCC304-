#include <stdio.h>

int main(void)
{
    int zoneCode;
    float weight_kg;
    float totalCost = 0.0f;

    if (scanf("%d %f", &zoneCode, &weight_kg) != 2)
    {
        return 1;
    }

    switch (zoneCode)
    {
    case 1: /* Local */
        if (weight_kg <= 5.0f)
        {
            totalCost = 50.0f;
        }
        else
        {
            totalCost = 80.0f;
        }
        printf("%.2f\n", totalCost);
        break;

    case 2: /* Regional */
        if (weight_kg <= 10.0f)
        {
            totalCost = 150.0f;
        }
        else
        {
            totalCost = 250.0f;
        }
        printf("%.2f\n", totalCost);
        break;

    case 3: /* International */
        totalCost = 500.0f;
        printf("%.2f\n", totalCost);
        break;

    default:
        printf("Invalid Zone Code");
        break;
    }

    return 0;
}
