#include <stdio.h>

typedef struct Student {
    char  Name[20];
    char  ID[5];
    float ScoreSub1;
    float ScoreSub2;
    float ScoreSub3;
    float ScoreSub4;
    float ScoreSub5;
} S;

const char* grade_of(float s) {
    if (s >= 80) return "A";
    else if (s >= 75) return "B+";
    else if (s >= 70) return "B";
    else if (s >= 65) return "C+";
    else if (s >= 60) return "C";
    else if (s >= 55) return "D+";
    else if (s >= 50) return "D";
    else return "F";
}

int main(void) {
    S st[3];

    printf("Enter the details of 3 students :\n");

    for (int i = 0; i < 3; ++i) {
        printf("Student %d:\n", i + 1);

        printf("Name:\n");
        scanf(" %19[^\n]", st[i].Name);

        printf("ID:\n");
        scanf(" %4s", st[i].ID);

        printf("Scores in Subject 1:\n");
        scanf("%f", &st[i].ScoreSub1);

        printf("Scores in Subject 2:\n");
        scanf("%f", &st[i].ScoreSub2);

        printf("Scores in Subject 3:\n");
        scanf("%f", &st[i].ScoreSub3);

        printf("Scores in Subject 4:\n");
        scanf("%f", &st[i].ScoreSub4);

        printf("Scores in Subject 5:\n");
        scanf("%f", &st[i].ScoreSub5);

        printf("\n");
    }

    for (int i = 0; i < 3; ++i) {
        float s1 = st[i].ScoreSub1;
        float s2 = st[i].ScoreSub2;
        float s3 = st[i].ScoreSub3;
        float s4 = st[i].ScoreSub4;
        float s5 = st[i].ScoreSub5;
        float avg = (s1 + s2 + s3 + s4 + s5) / 5.0f;

        printf("Student %d:\n", i + 1);
        printf("Name: %s\n", st[i].Name);
        printf("ID: %s\n", st[i].ID);
        printf("Scores: %.0f %.0f %.0f %.0f %.0f\n", s1, s2, s3, s4, s5);
        printf("Grades: %s %s %s %s %s\n",
               grade_of(s1), grade_of(s2), grade_of(s3), grade_of(s4), grade_of(s5));
        printf("Average Scores: %.1f\n\n", avg);
    }

    return 0;
}
