#include <stdio.h>

int main() {
    int num1, num2, num3;
    int sum;

    // รับค่าตัวเลข 3 ค่า
    printf("กรอกตัวเลขทั้ง 3 ค่า: ");
    scanf("%d %d %d", &num1, &num2, &num3);

    // คำนวณผลรวม
    sum = num1 + num2 + num3;

    // แสดงผลลัพธ์
    printf("Answer = %d\n", sum);

    return 0;
}

