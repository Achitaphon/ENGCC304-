#include <stdio.h>
#include <ctype.h>

int count_words_in_file(const char *filename) {
    FILE *fp = fopen(filename, "r");
    if (!fp) return -1;

    int c, in_word = 0, count = 0;

    while ((c = fgetc(fp)) != EOF) {
        if (isspace((unsigned char)c)) {
            in_word = 0;          // ออกจากสถานะอยู่ในคำ เมื่อเจอช่องว่าง/ขึ้นบรรทัด/แท็บ
        } else {
            if (!in_word) {       // เข้าสู่คำใหม่ (ขอบคำ)
                count++;
                in_word = 1;
            }
        }
    }

    fclose(fp);
    return count;
}

int main(void) {
    char filename[256];

    printf("Enter file name:\n");
    if (scanf("%255s", filename) != 1) {
        fprintf(stderr, "Invalid input.\n");
        return 1;
    }

    int total = count_words_in_file(filename);
    if (total < 0) {
        printf("Cannot open file.\n");
        return 0;
    }

    printf("Total number of words in '%s' : %d words\n", filename, total);
    return 0;
}
