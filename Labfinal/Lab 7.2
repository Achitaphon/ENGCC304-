#include <stdio.h>

int main(void) {
    int position;       // 1=Junior, 2=Mid-Level, 3=Senior
    int years;          // อายุงาน (ปี)
    int projects;       // โปรเจคที่สำเร็จในปีนี้
    int baseSalary = 0; // เงินเดือนพื้นฐาน (THB)

    printf("Position: ");
    if (scanf("%d", &position) != 1) return 0;

    printf("Years of Experience: ");
    if (scanf("%d", &years) != 1) return 0;

    printf("Number of Projects Completed this Year: ");
    if (scanf("%d", &projects) != 1) return 0;

    switch (position) {
        case 1: baseSalary = 20000; break; // Junior
        case 2: baseSalary = 35000; break; // Mid-Level
        case 3: baseSalary = 50000; break; // Senior
        default:
            printf("Invalid position.\n");
            return 0;
    }

    double expBonusRate = 0.0;
    if (years < 1)       expBonusRate = 0.00;
    else if (years <= 3) expBonusRate = 0.10;
    else if (years <= 5) expBonusRate = 0.15;
    else                 expBonusRate = 0.20;

    double specialBonusRate = (projects > 5) ? 0.05 : 0.0;

    double expBonus     = baseSalary * expBonusRate;
    double specialBonus = baseSalary * specialBonusRate;
    double netSalary    = baseSalary + expBonus + specialBonus;

    printf("Base Salary: %.0f THB\n", (double)baseSalary);
    printf("Experience Bonus: %.0f THB\n", expBonus);
    printf("Special Bonus: %.0f THB\n", specialBonus);
    printf("Net Salary: %.0f THB\n", netSalary);

    return 0;
}
